{
  "name": "@projeto/api",
  "version": "0.1.0",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types.ts"
    }
  },
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "node --env-file=../../.env --watch --experimental-strip-types src/main.ts",
    "push": "pnpm with-env drizzle-kit push",
    "dbgen": "pnpm with-env drizzle-kit generate",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "studio": "pnpm with-env drizzle-kit studio",
    "with-env": "dotenv -e ../../.env --",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit"
  },
  "author": "johnpgr",
  "license": "MIT",
  "dependencies": {
    "@electric-sql/pglite": "^0.2.7",
    "@hono/node-server": "^1.13.2",
    "@hono/trpc-server": "^0.3.2",
    "@hono/zod-validator": "^0.3.0",
    "@langchain/mistralai": "^0.1.1",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@node-rs/argon2": "^1.8.3",
    "@projeto/validation": "workspace:^",
    "@trpc/server": "catalog:",
    "@tsndr/cloudflare-worker-jwt": "^2.5.3",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.5",
    "lucia": "^3.2.0",
    "pg": "^8.13.0",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@projeto/eslint-config": "workspace:^",
    "@projeto/prettier-config": "workspace:^",
    "@projeto/tsconfig": "workspace:^",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.24.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
}
